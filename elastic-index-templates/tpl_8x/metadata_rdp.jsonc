{
  "priority": 1,
  "version": 1,
  "composed_of": ["metadata", "metadata_id", "metadata_host", "metadata_local"],
  "index_patterns": [
    "metadata_rdp*"
  ],
  "template":{
    "settings": {
      "lifecycle.rollover_alias":"metadata_rdp",
      "index": {
        "number_of_shards": "1"
      }
    },
    "mappings": {
      "_meta": {
        "description": "Template for RDP metadata produced by Vectra Stream"
      },
      "properties": {
        "cookie": {
          "type": "keyword"
        },
        "keyboard_layout": {
          "type": "keyword"
        },
        "client_build": {
          "type": "keyword"
        },
        "client_name": {
          "type": "keyword"
        },
        "client_dig_protocol_id": {
          "type": "keyword"
        },
        "client_dig_product_id": {
          "type": "keyword"
        },
        "desktop_width": {
          "type": "short"
        },
        "desktop_height": {
          "type": "short"
        },
        "result": {
          "type": "keyword"
        }
      }
    }
  }
}
